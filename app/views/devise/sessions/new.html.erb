<%= stylesheet_link_tag 'signup', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="container d-flex justify-content-center">
<div class="col-6  bg-white d-flex flex-column  p-5 ">
<h1 class="fs-3 mb-3">ログイン</h1>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label 'メールアドレス',class:"text-muted" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"border rounded col-12 border-dark p-1" %>
  </div>

  <div class="field">
    <%= f.label 'パスワード' ,class:"text-muted" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"border rounded col-12 border-dark  p-1"%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mt-2 mb-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="box-login my-3">
    <%= f.submit "ログイン",class:"d-flex justify-content-center mb-3" %>
    <%= link_to '簡単ログイン', users_guest_sign_in_path, method: :post, class:"btn btn-outline-success d-flex justify-content-center align-items-center" %>
  </div>
<% end %>
<div class="mt-1">
<%= render "devise/shared/links" %>
</div>
</div>
</div>
