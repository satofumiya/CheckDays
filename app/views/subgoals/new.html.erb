<div class="vh-100">
  <div class="d-flex container flex-column bg-white h-75">
    <%= form_with model: [@goal,@subgoal], class:"d-flex flex-column m-5" do |f|%>
      <div class="d-flex justify-content-center h-50">
        <%= f.text_field :title, placeholder: "目標を達成するためのサブゴールは？", class:"col-10 border form-control-lg"%>
      </div>
      <div class="d-flex justify-content-center">
        <div class="d-flex my-4 col-10 justify-content-end">
          <%= f.submit "保存する", class:"btn btn-outline-primary"%>
        </div>
      </div>
    <% end %>
  </div>
</div>
