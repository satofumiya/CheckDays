<div class="tweet-card">
<% @goals.each do |goal| %>
  <div class="card">
    <div class="stream-item">
      <div class="content">
        <div class="stream-item-header">
          <div class="time">
            ・<%= time_ago_in_words(goal.created_at) %>
          </div>
        </div>
        <div class="tweet-text">
          <%= safe_join(goal.text.split("\n"), tag(:br)) %>
        </div>
        <div class="goaleditlink">
          <%= link_to  "目標を編集する", edit_goal_path(goal.id), class:"btn" %>
        </div>
        <div class="reachgoal?">
          <% if goal.reachgoal %>
            <%= "目標達成!" %>
          <% end %> 
        </div>
      </div>
    </div>
  </div>
<% end %>  

<% @tweets.each do |tweet| %>
    <div class="card">
      <div class="stream-item">
        <div class="content">
          <div class="stream-item-header">
            <div class="time">
              ・<%= time_ago_in_words(tweet.created_at) %>
            </div>
          </div>
          <div class="tweet-text">
            <%= safe_join(tweet.text.split("\n"), tag(:br)) %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>